<?xml version="1.0" encoding="utf-8"?>
<com.sunny.test.wheelview.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.sunny.test.wheelview.widget.WheelView
                android:id="@+id/hour_wheelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.sunny.test.wheelview.widget.WheelView
                android:id="@+id/minute_wheelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.sunny.test.wheelview.widget.WheelView
                android:id="@+id/second_wheelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:onClick="showDialog"
            android:text="wheelview dialog"/>

        <ImageView
            android:id="@+id/img_avatar"
            android:src="@mipmap/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>
</com.sunny.test.wheelview.widget.NestedScrollView>